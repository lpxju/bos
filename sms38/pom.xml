  <groupId>com.itheima.maven</groupId>
  <artifactId>sms38</artifactId>
  <version>0.0.1-SNAPSHOT</version>
  <packaging>war</packaging>
  <description>短信系统</description>
  
  <build>
	<pluginManagement>
		<plugins>
			<!-- 引入tomcat插件 -->
			<plugin>
				<groupId>org.apache.tomcat.maven</groupId>
				<artifactId>tomcat7-maven-plugin</artifactId>
				<version>2.2</version>
				<configuration>
					<uriEncoding>UTF-8</uriEncoding>
					<path>/bos_sms</path>
					<port>8891</port>
				</configuration>
			</plugin>
		</plugins>
	</pluginManagement>
</build>
  
